---
import { Icon } from 'astro-icon/components'

const { title, postedBy, timePost, commentCount, voteCount } = Astro.props
---

<div class="border-b border-[#ccc] px-4 py-1">
    <div class="flex flex-col gap-2">
        <div>
            <span class="text-xs font-bold">{postedBy}</span>
            <span class="text-xs text-[#576F76]">{timePost}</span>
        </div>
        <h3 class="text-sm font-semibold">{title}</h3>
        <div class="flex flex-row gap-2">
            <span
                class="flex h-[32px] flex-row items-center gap-[6px] rounded-full bg-[#EAEDEF] px-3"
            >
                <Icon name="upvote" class="text-base" />
                <span class="text-xs">{voteCount}</span>
                <Icon name="downvote" class="text-base" />
            </span>
            <span
                class="flex h-[32px] flex-row items-center gap-[6px] rounded-full bg-[#EAEDEF] px-3"
            >
                <Icon name="comment" class="text-xl" />
                <span class="text-xs">{commentCount}</span>
            </span>
        </div>
    </div>
</div>
