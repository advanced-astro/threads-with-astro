---
import BaseLayout from '../layouts/base.astro'
import SortBar from '../components/sortBar.astro'
import ThreadCard from '../components/threadCard.astro'
import { modelSubreddit } from '../model/subreddit'

const token = import.meta.env.REDDIT_TOKEN
const response = await fetch('https://oauth.reddit.com/r/DotA2/hot', {
    headers: {
        Authorization: `bearer ${token}`,
    },
})
const data = await response.json()
const treads = data.data.children.map((thread) => modelSubreddit(thread))
---

<BaseLayout>
    <div class="container mx-auto">
        <div>
            <SortBar />
        </div>
        <div class="flex flex-col">
            {treads.map((thread) => <ThreadCard {...thread} />)}
        </div>
    </div>
</BaseLayout>
